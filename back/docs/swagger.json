{
    "swagger": "2.0",
    "info": {
        "description": "API для управления данными и взаимодействия через HTTP-эндпоинты.",
        "title": "Prosto Matika API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/api/v1",
